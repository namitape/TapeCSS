{
    "manifest_version": 3,
    "name": "Custom CSS Styler",
    "version": "1.0",
    "description": "カスタムCSSでウェブサイトのデザインをカスタマイズ",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["https://twitter.com/*", "https://x.com/*", "https://github.com/*", "https://youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["https://twitter.com/*", "https://x.com/*", "https://github.com/*", "https://youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Custom CSS Styler"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  